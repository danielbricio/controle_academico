<!DOCTYPE html>
<html>
<head>
  <title><%= content_for(:title) || "Editar Aluno" %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #1E3962;
      color: #ffffff;
      font-family: 'Inter', sans-serif;
    }

    .form-container {
      background-color: #ffffff;
      color: #333333;
      border-radius: 12px;
      padding: 30px;
      width: 50%;
      margin: 50px auto;
      box-shadow: 0px 4px 6px rgba(0,0,0,0.1);
      text-align: center;
    }

    h1 {
      font-weight: bold;
      color: #275BA8;
    }

    .form-label {
      font-weight: bold;
      color: #275BA8;
    }

    .btn-update, .btn-back {
      border: none;
      border-radius: 8px;
      padding: 10px 20px;
      font-weight: bold;
      text-transform: uppercase;
      text-decoration: none;
      color: #ffffff;
      background-color: #275BA8;
      margin-top: 10px;
    }

    .btn-update:hover, .btn-back:hover {
      background-color: #1D4B8C;
    }

    .btn-back {
      background-color: #6c757d;
    }

    .btn-back:hover {
      background-color: #5a6268;
    }
  </style>
</head>
<body>
  <div class="form-container">
    <h1>Editar Aluno</h1>

    <!-- Formulário -->
    <%= form_with model: @aluno, local: true do |form| %>
      <div class="mb-3 text-start">
        <%= form.label :nome, "Nome", class: "form-label" %>
        <%= form.text_field :nome, class: "form-control", placeholder: "Digite o nome" %>
      </div>

      <div class="mb-3 text-start">
        <%= form.label :idade, "Idade", class: "form-label" %>
        <%= form.number_field :idade, class: "form-control", placeholder: "Digite a idade" %>
      </div>

      <div class="mb-3 text-start">
        <%= form.label :email, "Email", class: "form-label" %>
        <%= form.email_field :email, class: "form-control", placeholder: "Digite o email" %>
      </div>

      <!-- Botões -->
      <div class="d-flex justify-content-center gap-3">
        <%= form.submit "Atualizar Aluno", class: "btn btn-update" %>
        <%= link_to "Voltar", alunos_path, class: "btn btn-back" %>
      </div>
    <% end %>
  </div>
</body>
</html>
