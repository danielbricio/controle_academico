<%= form_with(model: @aluno, local: true) do |form| %>
    <div>
      <%= form.label :nome %>
      <%= form.text_field :nome %>
    </div>
    <div>
      <%= form.label :idade %>
      <%= form.number_field :idade %>
    </div>
    <div>
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>
    <div>
      <%= form.submit %>
    </div>
  <% end %>
  