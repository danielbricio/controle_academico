<h1>Nova Disciplina</h1>

<%= form_with(model: @disciplina, local: true) do |form| %>
  <% if @disciplina.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@disciplina.errors.count, "erro") %> encontrados:</h2>
      <ul>
        <% @disciplina.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nome %>
    <%= form.text_field :nome %>
  </div>
  <div>
    <%= form.label :codigo %>
    <%= form.text_field :codigo %>
  </div>
  <div>
    <%= form.submit "Salvar" %>
  </div>
<% end %>

<%= link_to "Voltar", disciplinas_path %>
