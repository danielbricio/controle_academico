<h1>Editar Matrícula</h1>

<%= form_with(model: @matricula, local: true) do |form| %>
  <div>
    <%= form.label :aluno_id, "Aluno" %>
    <%= form.collection_select :aluno_id, Aluno.all, :id, :nome, prompt: "Selecione um Aluno" %>
  </div>

  <div>
    <%= form.label :disciplina_id, "Disciplina" %>
    <%= form.collection_select :disciplina_id, Disciplina.all, :id, :nome, prompt: "Selecione uma Disciplina" %>
  </div>

  <div>
    <%= form.submit "Atualizar Matrícula" %>
  </div>
<% end %>

<%= link_to "Voltar", matriculas_path %>
